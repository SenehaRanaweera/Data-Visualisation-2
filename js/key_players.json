{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A radial chart showing market shares of key players in the telecommunications industry.",
    "width": "container",
    "height": 350,
    "data": {
      "url": "../data/key_players.csv",
      "format": {"type": "csv"}
    },
    "mark": {"type": "arc", "innerRadius": 50},
    "encoding": {
      "theta": {"field": "shares", "type": "quantitative"},
      "color": {"field": "Brand", "type": "nominal", "legend": {"title": "Telecom Companies"}},
      "tooltip": [
        {"field": "Brand", "type": "nominal", "title": "Company"},
        {"field": "shares", "type": "quantitative", "title": "Market Share (%)"}
      ]
    }
  }
  