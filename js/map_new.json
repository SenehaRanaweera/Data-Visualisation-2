{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Telecommunications Complaints per 1,000 People by State",
    "width": 1000,
    "height": 500,
    "projection": {"type": "equirectangular"},
    "data": {
      "url": "ne_10m_admin_1_states_provinces.json",
      "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
    },
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "data/Book1.csv"
          },
          "key": "State",
          "fields": ["State", "complaints","Total Complaints"]
        }
      },
      {"calculate": "datum.complaints + 0", "as": "ComplaintsPer1000"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "ComplaintsPer1000",
        "type": "quantitative",
        "scale": {"type": "linear", "scheme": "yellowgreenblue"}
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State"},
        {"field": "complaints", "type": "quantitative", "title": "Complaints Per 1000 People"},
        {"field": "Total Complaints", "type": "quantitative", "title": "Complaints","format":","}
      ]
    }
  }